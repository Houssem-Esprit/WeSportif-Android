<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_main_bg"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Modifier Profile"
            android:textSize="10pt"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/dialog_accent_title"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_accent"
        android:layout_marginBottom="10dp"
        android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
           >

            <EditText
                android:id="@+id/edit_email_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:hint="\t \t E-mail"
                android:drawableLeft="@drawable/envelope_32"

                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <EditText
                android:id="@+id/edit_tel_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:hint="\t \t Numéro téléphone"
                android:drawableLeft="@drawable/call_answer_32"

                />

        </LinearLayout
            >


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <EditText
                android:id="@+id/edit_birthday_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:hint="\t \t Date de naissance"
                android:drawableLeft="@drawable/clock_profile_32"

                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/submitEditProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Enregistrer"
        android:textColor="@color/whiteTextColor"
        android:textSize="6pt"
        android:background="@drawable/dialog_accent_button"/>

</LinearLayout>