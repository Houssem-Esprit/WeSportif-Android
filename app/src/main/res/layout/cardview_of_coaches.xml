<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/whiteTextColor"
    app:cardElevation="6dp"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/coach_img"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            app:civ_border_width="0.5dp"
            app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/coach_img"
        android:text="Coach name"
        android:textStyle="bold"
        android:textSize="6.5pt"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>


    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coach_name"
        android:layout_toRightOf="@id/coach_img"
        android:layout_marginLeft="12pt"
        android:layout_marginTop="10dp"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="#ffd500"
        android:rating="2.5"
        android:stepSize="1.0"/>

    <ImageView
        android:id="@+id/envoyer_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/send_icon_64"
         />

    </RelativeLayout>

</androidx.cardview.widget.CardView>